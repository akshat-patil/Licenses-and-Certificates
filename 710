  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Nanonets": {
    "ApiKey": "YOUR_API_KEY_HERE",
    "ModelId": "YOUR_MODEL_ID_HERE"
  }
}


