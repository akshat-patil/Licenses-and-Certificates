<!-- ---- SCRIPT FOR EXPANDING SEARCH BAR ---- -->
<script>
function toggleSearch() {
    const box = document.getElementById("searchBox");
    box.classList.toggle("active");

    // focus automatically when expanded
    if (box.classList.contains("active")) {
        box.focus();
    }
}
</script>